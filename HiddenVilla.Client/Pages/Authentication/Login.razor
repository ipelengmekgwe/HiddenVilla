@page "/login"

<EditForm Model="UserForAuthentication" OnValidSubmit="AuthenticateUser" class="pt-4">
    <div class="py-4">
        <div class=" row form-group ">
            <div class="col-6 offset-3 ">
                <div class="card border">
                    <div class="card-body px-lg-5 pt-4">
                        <h3 class="col-12 text-success text-center py-2">
                            <strong>Sign In</strong>
                        </h3>
                        <DataAnnotationsValidator />

                        @if (ShowAuthenticationErrors)
                        {
                            <p class="text-danger text-center">@ErrorMessage</p> 
                        }

                        <hr style="background-color:aliceblue" />
                        <div class="py-2">
                            <InputText @bind-Value="UserForAuthentication.UserName" class="form-control" placeholder="Email..." />
                            <ValidationMessage For="(() => UserForAuthentication.UserName)" />

                        </div>
                        <div class="py-2">
                            <InputText @bind-Value="UserForAuthentication.Password" type="password" class="form-control" placeholder="Password..." />
                            <ValidationMessage For="(() => UserForAuthentication.Password)" />

                        </div>
                        <hr style="background-color:aliceblue" />
                        <div class="py-2">
                            @if (IsProcessing)
                            {
                                <button type="submit" class="btn btn-success d-block form-control disabled"><i class="fas fa-sign-in-alt"></i> Please wait...</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success d-block form-control"><i class="fas fa-sign-in-alt"></i> Sign in</button>
                            }
                            <a href="/registration" class="btn btn-primary text-white mt-3 d-block form-control"><i class="fas fa-user-plus"></i> Register as a new user</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>

